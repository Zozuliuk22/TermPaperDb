@model TermPaperDb.ViewModels.RouteViewModel
@{
    ViewBag.Title = "Маршрути";
}
<br />
<h4>Маршрути</h4>
<br />
@Html.ActionLink("Створити новий маршрут", "Create", "Route", new { area = "" }, new { @class = "btn btn-success" })
<br />
<br />

<div class="menu">
    @if (Model.Routes.Count() == 0)
    {
        <h2 style="text-align:center">Таблиця не є заповненою</h2>
    }
    else
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Назва</th>
                </tr>
            </thead>
            @foreach (var item in Model.Routes)
            {
                <tbody>
                    <tr class="table-light">
                        <th scope="row">@item.Id</th>
                        <td><h5>@item.Name</h5></td>
                        <td>@Html.ActionLink("Редагувати", "Edit", "Route", new { id = item.Id }, new { @class = "btn btn-warning" })</td>
                        <td>@Html.ActionLink("Видалити", "Delete", "Route", new { id = item.Id }, new { @class = "btn btn-danger" })</td>
                    </tr>
                </tbody>
            }
        </table>
    }
    <br /><br />
</div>